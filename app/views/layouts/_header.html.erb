<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to t("project_name"), root_path,
        class: "color-white navbar-brand" %>
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav pull-right">
        <% if customer_signed_in? %>
          <%= link_to cart_path do %>
            <button class="fa fa-shopping-cart"></button>
            <%= render "layouts/cart", size: current_order.sum_order_dishes %>
          <% end %>
          <a class="dropdown-toggle btn" data-toggle="dropdown" href="#">
            <%= current_customer.picture.url ? cl_image_tag(
                current_customer.picture.url, size: "28x28") :
                image_tag(t("user_url"), size: "28x28") %>
            <span class="caret color-white"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to t("pages.title.settings"),
              edit_customer_registration_path %></li>
            <li><%= link_to t("pages.title.log_out"),
              logout_path, method: :delete %></li>
          </ul>
        <% elsif staff_signed_in? %>
          <% if can? :index, Dish %>
            <%= link_to t("pages.title.dishes"), dishes_path,
              class: "color-white btn" %>
          <% end %>
          <% if can? :index, Category %>
            <%= link_to t("pages.title.categories"), categories_path,
              class: "color-white btn" %>
          <% end %>
          <% if can? :index, Customer %>
            <%= link_to t("pages.title.customers"), customers_path,
              class: "color-white btn" %>
          <% end %>
          <%= link_to t("pages.title.staffs"), staffs_path,
            class: "color-white btn" %>
          <a class="dropdown-toggle btn" data-toggle="dropdown" href="#">
            <%= current_staff.picture.url ? cl_image_tag(
                current_staff.picture.url, size: "28x28") :
                image_tag(t("user_url"), size: "28x28") %>
            <span class="caret color-white"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to t("pages.title.settings"),
              edit_staff_registration_path %></li>
            <li><%= link_to t("pages.title.log_out"),
              logout_path, method: :delete %></li>
          </ul>
        <% else %>
          <%= link_to cart_path, class: "float-left" do %>
            <button class="fa fa-shopping-cart"></button>
            <%= render "layouts/cart", size: current_order.sum_order_dishes %>
          <% end %>
          <li><%= link_to t("pages.title.sign_in"),
            new_customer_session_path, class: "color-white btn" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
