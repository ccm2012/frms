<%= form_for customer do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :email %>
  <%= f.email_field :email, disabled: f.object.new_record? ? false : true,
    class: "form-control" %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :phone_num %>
  <%= f.number_field :phone_num, class: "form-control" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  </br>
  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block" %>
  <%= button_tag t("button.reset"), type: :reset %>
  <%= link_to t("button.back"), :back, class: "btn btn-default" %>
<% end %>
