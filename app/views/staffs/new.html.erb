<% provide :title, t("staffs.new_user") %>
<h1 class="text-center"><%= t ".create_new_user"%></h1>
<div class="container">
  <div class="col-md-6 col-md-offset-3">
      <%= form_for @staff do |f| %>
        <%= render "shared/error_messages", object: f.object %>

        <%= f.label :staff_role %></br>
        <%= f.select :staff_role, @roles %></br>

        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>

        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>

        <%= f.label :phone_num %>
        <%= f.number_field :phone_num, class: "form-control" %>

        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
        </br>
        <%= f.submit t("submit"), class: "btn btn-primary btn-block" %>
      <% end %>
  </div>
</div>
